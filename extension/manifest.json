{
    "name": "Homepage Companion",
    "description": "A complementary extension for your homepage fullstack webapp that adds additional functionality and features",
    "version": "1.0.0",
    "manifest_version": 3,
    "permissions": [
        "storage",
        "tabs"
    ],
    "action": {
        "default_popup": "popup/index.html",
        "default_icon": "icons/icon1024x1024.png"
    },
    "icons": {
        "16": "icons/icon1024x1024.png",
        "48": "icons/icon1024x1024.png",
        "128": "icons/icon1024x1024.png"
    },
    "background": {
        "service_worker": "background.js"
    }
}
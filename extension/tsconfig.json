{
    "compilerOptions": {
        "target": "es2017",
        "module": "none",
        "strict": true,
        "esModuleInterop": true,
        "outDir": "dist",
        "rootDir": ".",
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "chrome"
        ]
    },
    "include": [
        "background.ts",
        "core/**/*.ts",
        "features/**/*.ts",
        "gateways/**/*.ts",
        "services/**/*.ts"
    ],
    "exclude": [
        "popup/**/*",
        "node_modules"
    ]
}
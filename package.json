{
    "name": "homepage",
    "version": "1.0.0",
    "description": "Homepage project with React frontend and FastAPI backend",
    "scripts": {
        "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
        "dev:backend": ".\\backend\\venv\\Scripts\\python.exe .\\backend\\__main__.py",
        "dev:frontend": "cd frontend && npm run dev",
        "test": "concurrently \"npm run test:backend\" \"npm run test:frontend\"",
        "test:backend": "cd backend && python -m unittest discover -s tests -p \"test_*.py\"",
        "test:frontend": "cd frontend && npm run test"
    },
    "devDependencies": {
        "concurrently": "^8.2.2"
    },
    "keywords": [
        "react",
        "fastapi",
        "homepage",
        "fullstack"
    ],
    "author": "",
    "license": "ISC"
}